{
  "name": "Linkbolt",
  "manifest_version": 3,
  "version": "0.0.1",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/worker/background.ts",
    "type": "module"
  },
  "permissions": ["cookies", "tabs", "storage"],
  "host_permissions": ["http://localhost:3001/*"],
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  }
}
